<Window x:Class="Lab1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF00FFE2" Offset="0.277"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="Welcome to the main menu. Please, choose one of the options below." VerticalAlignment="Top" TextAlignment="Center" FontSize="20" UseLayoutRounding="False"/>
        <Button x:Name="TimeManagerBtn" Content="Time Manager" HorizontalAlignment="Left" Margin="140,0,0,0" VerticalAlignment="Center" Height="60" Width="193" Click="TimeManagerBtn_Click" Background="#FF24B9AF"/>
        <Button x:Name="SortManagerBtn" Content="Sort Manager" HorizontalAlignment="Left" Margin="480,0,0,0" VerticalAlignment="Center" Height="60" Width="193" Click="SortManagerBtn_Click" Background="#FF24B9AF"/>

    </Grid>
</Window>
